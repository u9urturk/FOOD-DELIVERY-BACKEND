# Zone.md'ye uygun güvenlik ayarları

# Uygulama
NODE_ENV=development
PORT=3000

# Veritabanı
DATABASE_URL="postgresql://username:password@localhost:5432/food_delivery?schema=public"

# JWT Ayarları - Zone.md'ye göre kısa ömürlü access token
JWT_SECRET="your-super-secret-jwt-key-min-256-bit"
JWT_EXPIRES_IN="15m"
ACCESS_TOKEN_TTL="900s"

# Refresh Token Ayarları
REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key"
REFRESH_TOKEN_EXPIRES_IN="7d"

# Cookie Ayarları
COOKIE_DOMAIN=localhost
CROSS_SITE_COOKIES=true

# CORS Ayarları
FRONTEND_URL="http://localhost:5173,http://localhost:4200"

# Redis (Session ve Rate Limiting için)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=""

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Ayarları
OTP_EXPIRES_IN=300
OTP_LENGTH=6

# CSRF Ayarları
CSRF_SECRET="your-csrf-secret-key"
DISABLE_CSRF_FOR_SWAGGER=true

# Production için önerilen ayarlar:
# NODE_ENV=production
# CROSS_SITE_COOKIES=true (farklı domain'ler için)
# COOKIE_DOMAIN=.yourdomain.com
# JWT_EXPIRES_IN="5m" (daha kısa süre)
